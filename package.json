{
	"name": "x-nestjs-boilerplate",
	"version": "0.0.1",
	"description": "NestJS Boilerplate, Typescript, Postgres, TypeORM",
	"author": "Safvantsy <safvanmanikulath@gmail.com>",
	"private": true,
	"license": "MIT",
	"scripts": {
		"build": "nest build",
		"format": "biome format --write ./src ./test",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "biome lint --write ./src ./test",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:cov": "vitest run --coverage",
		"test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
		"test:e2e": "vitest run --config ./test/vitest.config.e2e.ts",
		"prepare": "husky install",
		"release": "release-it",
		"typeorm": "ts-node -r tsconfig-paths/register node_modules/typeorm/cli.js",
		"migration:generate": "pnpm run typeorm -d src/database/ormconfig.ts migration:generate",
		"migration:create": "pnpm run typeorm migration:create",
		"migration:run": "pnpm run typeorm -d src/database/ormconfig.ts migration:run",
		"migration:revert": "pnpm run typeorm -d src/database/ormconfig.ts migration:revert",
		"schema:drop": "pnpm run typeorm -d src/database/ormconfig.ts schema:drop"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.485.0",
		"@nestjs/common": "^10.3.9",
		"@nestjs/config": "^3.2.2",
		"@nestjs/core": "^10.3.9",
		"@nestjs/cqrs": "^10.2.7",
		"@nestjs/jwt": "^10.2.0",
		"@nestjs/microservices": "^10.3.0",
		"@nestjs/passport": "^10.0.3",
		"@nestjs/platform-express": "^10.3.9",
		"@nestjs/swagger": "^7.3.1",
		"@nestjs/terminus": "^10.2.0",
		"@nestjs/throttler": "^5.1.1",
		"@nestjs/typeorm": "^10.0.2",
		"bcrypt": "^5.1.1",
		"body-parser": "^1.20.2",
		"cache-manager-redis-store": "^3.0.1",
		"class-transformer": "~0.5.1",
		"class-validator": "~0.14.0",
		"compression": "^1.7.4",
		"dotenv": "^16.4.5",
		"express": "^4.18.2",
		"helmet": "^7.1.0",
		"jsonwebtoken": "^9.0.2",
		"libphonenumber-js": "^1.11.4",
		"lodash": "^4.17.21",
		"mime-types": "^2.1.35",
		"morgan": "^1.10.0",
		"nestjs-cls": "^4.3.0",
		"nestjs-i18n": "^10.4.5",
		"parse-duration": "^1.1.0",
		"passport": "^0.6.0",
		"passport-custom": "^1.1.1",
		"passport-jwt": "^4.0.1",
		"pg": "^8.11.3",
		"reflect-metadata": "^0.2.0",
		"rxjs": "^7.8.1",
		"source-map-support": "^0.5.21",
		"swagger-ui-express": "^5.0.0",
		"tslib": "^2.6.2",
		"typeorm": "^0.3.20",
		"typeorm-transactional": "^0.5.0",
		"uuid": "^10.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.8.2",
		"@nestjs/cli": "^10.0.0",
		"@nestjs/schematics": "^10.0.0",
		"@nestjs/testing": "^10.0.0",
		"@swc/core": "^1.6.5",
		"@types/bcrypt": "^5.0.2",
		"@types/cache-manager-redis-store": "^2.0.4",
		"@types/compression": "^1.7.5",
		"@types/express": "^4.17.17",
		"@types/jest": "^29.5.11",
		"@types/jsonwebtoken": "^9.0.5",
		"@types/lodash": "^4.14.202",
		"@types/mime-types": "^2.1.4",
		"@types/morgan": "^1.9.9",
		"@types/node": "^20.3.1",
		"@types/passport-jwt": "^3.0.13",
		"@types/supertest": "^6.0.0",
		"@types/uuid": "^9.0.7",
		"@vitest/coverage-v8": "^1.6.0",
		"cross-env": "^7.0.3",
		"gh-pages": "^6.1.1",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.7",
		"release-it": "^17.0.1",
		"source-map-support": "^0.5.21",
		"supertest": "^6.3.3",
		"ts-loader": "^9.4.3",
		"ts-node": "^10.9.1",
		"ts-node-dev": "^2.0.0",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.1.3",
		"unplugin-swc": "^1.4.5",
		"vitest": "^1.6.0"
	},
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	},
	"lint-staged": {
		"*.ts": [
			"pnpm run lint && pnpm run format"
		]
	}
}